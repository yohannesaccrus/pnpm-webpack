{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": ["dom", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@base/*": ["src/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"]
    }
  },
  "include": ["src"]
}
